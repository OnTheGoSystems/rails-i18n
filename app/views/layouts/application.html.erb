<!DOCTYPE html>
<html>
  <head>
    <title>SampleRailsI18n</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body data-locale="<%= I18n.locale %>">
    <ul class="language-switcher">
      <% { en: "English", es: "EspaÃ±ol", de: "Deutsch" }.each_pair do |lang_code, lang_name| %>
        <li class="<%= (I18n.locale == lang_code ? 'active' : '') %>">
          <%= link_to lang_name, url_for(locale: lang_code) %>
        </li>
      <% end %>
    </ul>
    <%= yield %>
  </body>
</html>
